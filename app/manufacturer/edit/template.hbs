<div class="row">
  <div class="col-md-12">
    <form class="form" {{action "edit" model on="submit"}}>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h1 class="panel-title">Edit Manufacturer</h1>
        </div>
        <div class="panel-body">
          <div class="form-group">
            {{input type="text" placeholder="Company Name" value=model.name class="form-control edit" }}
          </div>
          <div class="form-group">
            {{input type="text" placeholder="ISO Country Code" value=model.country class="form-control edit" }}
          </div>
        </div>
        <div class="panel-footer">
          <p>
            {{#link-to "manufacturer.index" class="btn btn-primary"}}Back{{/link-to}}
            <button class="btn btn-warning" type="submit">Submit</button>
          </p>
        </div>
      </div>
    </form>
  </div>
</div>
