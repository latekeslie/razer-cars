<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1 class="panel-title">{{model.name}} - {{model.country}}</h1>
      </div>
      <div class="panel-body">
        {{#link-to "edit" class="btn btn-primary col-md-2 "}}Edit Manufacturer{{/link-to}}
        <button {{action "deleteManufacturer"model}} class="btn btn-error col-md-2 col-md-offset-3">Delete Manufacturer</button>
        {{#link-to "manufacturer.car.new" class="btn btn-warning col-md-2 col-md-offset-3"}}Add New Car{{/link-to}}
      </div>
    </div>
  </div>
</div>

<div class="row">
  {{#each model.cars as |car|}}
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1 class="panel-title">{{car.name}} - {{car.year}}</h1>
      </div>
      <div class="panel-body">
        <p>{{car.hp}}</p>
        <p>{{car.price}}</p>
      </div>
      <div class="panel-footer">
        <button {{action "deleteCar"car}} class="btn btn-error">Delete</button>
      </div>
    </div>
  </div>
  {{/each}}
</div>
